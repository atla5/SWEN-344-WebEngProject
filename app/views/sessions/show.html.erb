<div class="row">
    <div class="col-md-3">
        <h2>Insert top 5 stocks here!</h2>
        <p><%= stocks %> </p>
    </div>
    <div class="col-md-6">
        <h2>Welcome <%= @user.name%>!</h2>
        <h3>Tweets: <%=@user.tweets_count %> Followers: <%=@user.followers_count %></h3>
        <%= form_tag(:action => "writetweet", method: "post") do %>
            <%= text_area_tag(name="tweet",content=nil, options = {size: "60x3", maxlength: 140, placeholder: "What's happening?"}) %>
            <br>
            <%= submit_tag("Tweet") %>
        <% end %>
            <% @tweets.each do |tweet| %>
            <div id="tweetbox" class="row wordwrap">
    			<div class="col-xs-1">
    				<img src="<%=tweet.user.profile_image_uri_https %>"/>
    			</div>
    			<div class="col-xs-11">
    				<strong><%= tweet.user.name %></strong> @<%= tweet.user.screen_name %>
    				<p><%= link_to tweet.text, "https://www.twitter.com/#{tweet.user.screen_name}/status/#{tweet.id}" %></p>
    			</div>
		    </div>
            <% end %>
    </div>
    <div class="col-md-3">
        <h3><%= @forecast.title %></h3>
        
        <p>Temperature: <%=@forecast.condition.temp %></p>
        <p><%=@forecast.condition.text %> </p>
    </div>
</div>



