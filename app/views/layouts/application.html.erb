<!DOCTYPE html>
<html>
<head>
  <title>Twitter Stocks</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%=link_to('Twitter Stocks', show_path, html_options={class: "navbar-brand"})%>
    </div>
    <ul class="nav navbar-nav">
      <li>
        <span class="glyphicon glyphicon-calendar"></span><%=link_to " Calendar", calendar_path%>
      </li>
      <li>
        <a href="#"><span class="glyphicon glyphicon-stats"></span> Stocks</a>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-right">
        <%= link_to "Logout", signout_path, method: :delete %>
      </li>
    </ul>
  </div>
</nav>
<div id="content">
<%= yield %>
</div>
</body>
</html>
